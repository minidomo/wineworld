{
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "python.formatting.blackArgs": [
        "--line-length",
        "120"
    ],
    "python.linting.mypyEnabled": true,
    "python.analysis.extraPaths": [
        "./src",
        "./tests"
    ],
    "files.exclude": {
        "**/__pycache__": true,
        "**/.coverage": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true
    }
}